u{
    text-decoration: none;
    cursor: pointer;
} 

p{
    margin-top:20px;
}

p>span{
    color:#2F549F;
    font-size:15px;
}
p>a>i{
    display:inline-block;
    color:#e4393c;
}
p>input{
    text-indent: 5px;
    width:222px;
    height:34px;
    border:1px solid #ccc;
    border-radius:5px;
    margin-left:10px;
}
p>.input{
    margin-left:7px;
}
p>select{
    width:132px;height:34px;
    border:1px solid #ccc;
    border-radius:5px;
    margin-left:10px;
}
#form_data>p>button{
    width:43%;
    height:34px;
    margin-left:75px;
    border:transparent;
    border-radius:5px;
    background:#2F549F;
    color:#fff;
    cursor:pointer;
    font-weight: bold;
}