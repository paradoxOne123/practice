* {
	padding: 0;
	margin: 0;
	list-style-type: none;
}
.clearfix:after {
	content: '';
	height: 0;
	display: block;
	visibility: hidden;
	overflow: hidden;
	clear: both;
}
.sns-top {
	height: 48px;
	border-top: 2px solid #2399f4;
	background: #fff;
	box-shadow: 0 0 5px rgba(0,0,0,.3);
}
.top-content {
	width: 960px;
	height: 48px;
	margin: 0 auto;
}
.top-content .logo {
	padding: 5px 0;
	float: left;
}
.top-content .logo>a {
	display: block;
	height: 38px;
}
.top-content .logo>a>img {
	height: 38px;
}
.top-content .search-bar {
	margin-left: 50px;
	float: left;
	height: 48px;
	position: relative;
}
.top-content .search-bar>input {
	width: 350px;
	font-size: 14px;
	line-height: 28px;
	padding: 0 28px 0 10px;
	margin: 9px 0;
	outline: none;
}
.sns-top .top-content .search-bar>span{
	top: 0;
	left: 0;
}
.top-content .search-bar>span>i {
	font-size: 20px;
	position: relative;
	top: 2px;
	left: -30px;
	cursor: pointer;
}
.top-content .search-bar>span>i:hover {
	color: #F1271A;
}
.search-hotlist {
	display: none;
	position: absolute;
	top: 100%;
	left: 0;
	width: 392px;
	margin-top: -8px;
	padding: 10px;
	border: 1px solid #e3e3e3;
	border-top: 0;
	background: #fff;
	box-sizing: border-box;
	box-shadow: 0 3px 3px rgba(0,0,0,.3);
	z-index: 10;
}
.search-hotlist li:first-child a {
	font-size: 12px;
	line-height: 20px;
	color: orange;
	text-decoration: none;
}
.search-hotlist>li>a {
	display: block;
	font-size: 14px;
	line-height: 30px;
	color: #555;
	text-decoration: none;
	border-bottom: 1px solid transparent;
	box-sizing: border-box;
}
.search-hotlist>li>a:hover {
	color: orange;
}
.search-hotlist>li>a>span {
	display: inline-block;
	width: 18px;
	height: 18px;
	margin-right: 15px;
	background: #999;
	font-size: 12px;
	line-height: 18px;
	color: #fff;
	border-radius: 90px;
	text-align: center;
	vertical-align: middle;
}
.search-hotlist>li:nth-child(2)>a>span {
	background: #F1271A;
}
.search-hotlist>li:nth-child(3)>a>span {
	background: #F1780A;
}
.top-right {
	float: right;
}
.top-right>ul {
	float: left;
}
.top-right>ul li {
	float: left;
	margin-right: 20px;
}
.top-right>ul li a {
	font-size: 14px;
	line-height: 48px;
	color: #5B5C5D;
	text-decoration: none;
}
.top-right>ul li:hover a {
	color: #F76A20;
}
.top-right>ul li a i {
	font-size: 20px;
	line-height: 48px;
	margin-right: 5px;
}
.top-right>div {
	float: left;
}
.top-right>div>span{
	display: block;
	float: left;
	padding-left: 20px;
	margin: 14px 0 14px;
	cursor: pointer;
}
.top-right>div>span:first-child {
	border-left: 1px solid #e3e3e3;
}
.top-right>div span i {
	font-size: 20px;
	color: #5B5C5D;
}
.top-right>div span i:hover {
	color: #F76A20;
}
.top-personal {
	position: relative;
}
.msg-ul {
	display: none;
	position: absolute;
	top: 100%;
	right: 45px;
	width: 100px;
}
.setting-ul {
	display: none;
	position: absolute;
	top: 100%;
	right: 0px;
	width: 100px;
}
.top-personal>span>ul {
	margin-top: -3px;
	background: #fff;
	border: 1px solid #e3e3e3;
}
.top-personal>span>ul:before {
	content: '';
	width: 0px;
	height: 0px;
	border-left: 10px solid transparent;
	border-right: 10px solid transparent;
	border-bottom: 10px solid #fff;
	position: absolute;
	right: 0;
	top: -10px;
}
.top-personal>ul>li {
}
.top-personal>span>ul>li>a {
	display: block;
	padding: 0 10px;
	margin: 0;
	font-size: 12px;
	line-height: 28px;
	color: #555;
	text-decoration: none;
}
.top-personal>span>ul>li>a:hover {
	color: orange;
}
.icon-setting:before,.icon-home:before {
	content: '' !important;
	display: block;
	visibility: hidden;
}







